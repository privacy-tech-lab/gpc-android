<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/limitadtracking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limit Ad Tracking Enabled ?"
        app:layout_constraintBottom_toTopOf="@+id/limitadtracking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/limitadtracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display 1"
        app:layout_constraintBottom_toTopOf="@id/adid_avaliable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adid_avaliable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User AdId:"
        app:layout_constraintBottom_toTopOf="@+id/adid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dislay AdId here!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adid_avaliable" />

</androidx.constraintlayout.widget.ConstraintLayout>